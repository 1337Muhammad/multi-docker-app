version: "3"
services:
  client:
    image: "beoboe/multi-client"
    mem_limit: 128m
    hostname: client
  server:
    image: "beoboe/multi-server"
    mem_limit: 128m
    hostname: api
    environment:
      - REDIS_HOST=$REDIS_HOST
      - REDIS_PORT=$REDIS_PORT
      - PGUSER=$PGUSER
      - PGHOST=$PGHOST
      - PGDATABASE=$PGDATABASE
      - PGPASSWORD=$PGPASSWORD
      - PGPORT=$PGPORT
  worker:
    image: "beoboe/multi-worker"
    mem_limit: 128m
    hostname: worker
    environment:
      - REDIS_HOST=$REDIS_HOST
      - REDIS_PORT=$REDIS_PORT
  nginx:
    image: "beoboe/multi-nginx"
    mem_limit: 128m
    hostname: nginx
    ports:
      - "80:80"
